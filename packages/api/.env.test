# Test Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=zariya_test

# Test Upload Configuration
UPLOAD_PATH=/tmp/zariya/uploads/test
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/quicktime,video/x-msvideo

# Test Security Configuration
JWT_SECRET=test-jwt-secret
JWT_EXPIRATION=24h

# Test Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Test CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Test File Security
SANITIZE_FILENAME=true
CHECK_FILE_TYPE=true
VIRUS_SCAN=false

# Test Upload Security
UPLOAD_REQUIRE_AUTH=true
UPLOAD_RATE_LIMIT=10
UPLOAD_VIRUS_SCAN=false
UPLOAD_MALWARE_SCAN=false
UPLOAD_CONTENT_VALIDATION=true

# Test Application Configuration
NODE_ENV=test
PORT=3001

# Test Logging
LOG_LEVEL=error