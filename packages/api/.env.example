# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=zariya

# Upload Configuration
UPLOAD_PATH=/var/lib/zariya/uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/quicktime,video/x-msvideo

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Security
SANITIZE_FILENAME=true
CHECK_FILE_TYPE=true
VIRUS_SCAN=false

# Upload Security
UPLOAD_REQUIRE_AUTH=true
UPLOAD_RATE_LIMIT=10
UPLOAD_VIRUS_SCAN=false
UPLOAD_MALWARE_SCAN=false
UPLOAD_CONTENT_VALIDATION=true

# Application Configuration
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=info